{
  "extends": ["//"],
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "db:format": {},
    "lint": {
      "dependsOn": ["db:format", "db:generate", "typecheck"]
    },
    "db:seed": {
      "dotEnv": [".env.development.local"],
      "env": ["NK_AUTH_TOKEN", "DATABASE_URL"]
    },
    "db:migrate:dev": {
      "dotEnv": [".env.development.local"],
      "env": ["NK_AUTH_TOKEN", "DATABASE_URL"]
    },
    "db:migrate:reset": {
      "dotEnv": [".env.development.local"],
      "env": ["NK_AUTH_TOKEN", "DATABASE_URL"]
    },
    "db:push": {
      "dotEnv": [".env.development.local"],
      "env": ["DATABASE_URL"]
    },
    "dev": {
      "dotEnv": [".env.development.local"],
      "env": ["POSTGRES_USER", "POSTGRES_PASSWORD", "POSTGRES_DB"]
    }
  }
}
